#include <stdio.h>			        	//libreria
#include <stdlib.h>				        //libreria
//1.15. Dados tres números determinar e informar con un mensaje si el primer número ingresado es menor que los otros dos
int main()
{
	int numero1, numero2, numero3;                                //variables para cada numero
	printf("Ingrese el primer numero: ");                         //se pide el primer numero
	scanf_s("%d", &numero1);                                      //se ingresa el primer numero
	printf("Ingrese el segundo numero: ");                        //se pide el segundo numero
	scanf_s("%d", &numero2);                                      //se ingresa el segundo numero
	printf("Ingrese el tercer numero: ");                         //se pide el tercer numero
	scanf_s("%d", &numero3);                                      //se ingresa el tercer numero
	if (numero1 < numero2 && numero1 < numero3) {                 //si el primer numero es menor a los otros dos
		printf("El primer numero es menor que los otros dos");      //se dice que el primer numero es menor
	}
	else {                                                        //si no
		printf("El primer numero no es menor que los otros dos");   //se dice que el primer numero es mayor que alguno de los otros
	}
	return 0;                                                     //fin del programa
} 
