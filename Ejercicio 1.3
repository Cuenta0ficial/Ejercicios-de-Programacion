#include <stdio.h>			        	//libreria
#include <stdlib.h>				        //libreria
//1.3. Confeccionar un programa que pueda ingresar 2 n√∫meros enteros y calcule e informe con mensajes aclaratorios la suma, el producto, el cociente y el resto.
int main()
{
	float numero1, numero2;                        //declaracion de variables base
	float suma, resta, producto, cociente, resto;  //declaracion de variables resultantes de operaciones
	printf("Ingrese el primer numero:");           //solicitud de ingreso de datos
	scanf_s("%f", &numero1);                       //lectura de datos
	printf("Ingrese el segundo numero:");          //solicitud de ingreso de datos
	scanf_s("%f", &numero2);                       //lectura de datos
	suma = numero1 + numero2;                      //suma de los dos numeros
	resta = numero1 - numero2;                     //resta de los dos numeros
	producto = numero1 * numero2;                  //producto de los dos numeros
	cociente = numero1 / numero2;                  //cociente de los dos numeros
	resto = numero1 % numero2;                     //resto de los dos numeros
	printf("La suma da: %f\n", suma);              //imprime el resultado de la suma
	printf("La resta da: %f\n", resta);            //imprime el resultado de la resta
	printf("El producto da: %f\n", producto);      //imprime el resultado de la producto
	printf("El cociente da: %f\n", cociente);      //imprime el resultado de la cociente
	printf("El resto da: %f\n", resto);            //imprime el resultado de la resto
	return 0;                                      //fin del programa
}
